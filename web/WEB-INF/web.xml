<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>city</servlet-name>
        <servlet-class>servlet.CityServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>city</servlet-name>
        <url-pattern>/city</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>abonent</servlet-name>
        <servlet-class>servlet.AbonentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>abonent</servlet-name>
        <url-pattern>/abonent</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tarif</servlet-name>
        <servlet-class>servlet.TarifServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tarif</servlet-name>
        <url-pattern>/tarif</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>talking</servlet-name>
        <servlet-class>servlet.TalkingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>talking</servlet-name>
        <url-pattern>/talking</url-pattern>
    </servlet-mapping>
</web-app>